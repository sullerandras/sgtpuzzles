	<string translatable="false" name="fifteen_drag_mode">unmodified</string>
	<string translatable="false" name="filling_drag_mode">unmodified</string>
	<string translatable="false" name="net_drag_mode">unmodified</string>
	<string translatable="false" name="twiddle_drag_mode">unmodified</string>
